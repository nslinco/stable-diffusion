upstream flaskhelloworld {
    server 127.0.0.1:8000;
}

server {
    listen 8080 default_server;
    listen [::]:8080 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;
    location / {
        try_files $uri $uri/ =404;
        proxy_pass http://flaskhelloworld;
    }
}